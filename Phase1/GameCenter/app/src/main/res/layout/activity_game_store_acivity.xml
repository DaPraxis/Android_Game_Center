<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStoreActivity"
    android:background="@drawable/bg_gradient">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="110dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="143dp"
        android:text="Pong game works on Physics and kinadynamics, check it out with clicking the pic!"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Slide"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="35dp"
        android:text="Slide game is a very popular game, it makes a mathematical genius out of you! Click the pic to buy the game!"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/Pong"
        android:layout_width="217dp"
        android:layout_height="217dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="112dp"
        app:srcCompat="@drawable/img_botton_gc_pong" />

    <ImageButton
        android:id="@+id/Slide"
        android:layout_width="217dp"
        android:layout_height="217dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="82dp"
        app:srcCompat="@drawable/img_botton_gc_slid" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Game Store"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />
</RelativeLayout>
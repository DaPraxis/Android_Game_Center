<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewOrLoad2048Activity">


    <Button
        android:id="@+id/New2048Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Resume2048Button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="-2dp"
        android:text="New Game"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/Resume2048Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="278dp"
        android:text="Resume"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/Load2048Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/New2048Button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="37dp"
        android:text="Load" />
</RelativeLayout>